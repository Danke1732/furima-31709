<%= render 'shared/header' %>

<%# 商品一覧 %>
<div class='item-contents users_item'>
  <h2 class='title'><%= "「 #{@keyword} 」に関する出品商品一覧" %></h2>
  <ul class='item-lists'>
    <% unless @items.empty? %>
      <% @items.each do |item| %>
        <li class='list'>
          <%= link_to item_path(item) do %>
            <div class='item-img-content'>
              <%= image_tag item.image, class: "item-img" if item.image.attached? %>
              <% unless item.buyer.nil? %>
                <div class='sold-out'>
                  <span>Sold Out!!</span>
                </div>
              <% end %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= item.name %>
              </h3>
              <div class='item-price'>
                <span><%= item.price %>円<br><%= item.shipping.type %></span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'><%= item.favorites.length %></span>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    <% else %>
      <%# 商品がない場合のダミー %>
      <div class="search-none">
        検索結果に該当する出品商品はありませんでした。
      </div>
    <% end %>
    <%# /商品がない場合のダミー %>
  </ul>
</div>
<%# /商品一覧 %>

<%= render 'shared/second-footer' %>