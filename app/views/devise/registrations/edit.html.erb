<%= render '/shared/second-header' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'registration-main change-user-info', html: { method: :put }) do |f| %>

  <div class='form-wrap form-edit-user'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報入力
      </h1>
    </div>
    <div class='login-flash-message'>
      <div class="update-errors">
        <%= render "devise/shared/error_messages", resource: resource %> 
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, autofocus: true, class:"input-default", id:"nickname", placeholder:"例) furima太郎", maxlength:"40", autocomplete: "nickname", required: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email", required: true %>
    </div>
    
    <div class='login-btn'>
      <%= f.submit "変更する" ,class:"login-red-btn" %>
      <%=link_to 'もどる', user_path(@user), class:"user-edit-back" %>
    </div>
  </div>
<% end %>

<%= render '/shared/second-footer' %>